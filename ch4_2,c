#include <stdio.h>

int main() {
    int num;
    printf("请输入一个不多于5位的正整数：");
    scanf("%d", &num);

    if (num <= 0 || num > 99999) {
        printf("输入的数字不符合要求！\n");
        return 1;
    }

    int temp = num;
    int digits = 0;
    while (temp > 0) {
        digits++;
        temp /= 10;
    }
    printf("它是 %d 位数\n", digits);

    temp = num;
    int arr[5] = {0};
    int i;
    for (i = digits - 1; i >= 0; i--) {
        arr[i] = temp % 10;
        temp /= 10;
    }
    printf("每一位数字为：");
    for (i = 0; i < digits; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    printf("逆序输出为：");
    temp = num;
    while (temp > 0) {
        printf("%d", temp % 10);
        temp /= 10;
    }
    printf("\n");

    return 0;
}